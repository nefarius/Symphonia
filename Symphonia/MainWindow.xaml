<controls:MetroWindow x:Class="Symphonia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Symphonia"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Symphonia" Height="340" Width="620"
                      Loaded="MainWindow_OnLoaded">
    <Grid>
        <Canvas>
            <TextBox x:Name="SearchQuery" Height="27" Canvas.Left="114" TextWrapping="Wrap" Canvas.Top="58" Width="203"/>
            <Button Content="Search" Canvas.Left="322" Canvas.Top="58" Width="75" Click="Button_Click"/>
            <TextBox x:Name="SearchResult" Height="144" Canvas.Left="115" TextWrapping="Wrap" Canvas.Top="90" Width="282"/>

        </Canvas>
    </Grid>
</controls:MetroWindow>

